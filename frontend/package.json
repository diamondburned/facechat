{
	"name": "facechat-frontend",
	"version": "0.0.1",
	"description": "Svelte frontend for Facechat",
	"scripts": {
		"build": "cross-env NODE_ENV=production webpack",
		"dev": "cross-env NODE_ENV=development webpack --no-info"
	},
	"author": "",
	"license": "AGPL-3.0-only",
	"devDependencies": {
		"cross-env": "^5.2.0",
		"css-loader": "^2.1.1",
		"eslint": "^7.9.0",
		"html-webpack-plugin": "^3.2.0",
		"mini-css-extract-plugin": "^0.6.0",
		"serve": "^11.0.0",
		"style-loader": "^0.23.1",
		"svelte": "^3.0.0",
		"svelte-loader": "2.13.3",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.0",
		"webpack-dev-server": "^3.3.1"
	},
	"dependencies": {
		"browser-cookies": "^1.2.0",
		"escape-html": "^1.0.3",
		"marked": "^1.1.1",
		"navaid": "^1.0.5",
		"simplemde": "^1.11.2",
		"spectre.css": "^0.5.9"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"trailingComma": "all",
		"bracketSpacing": true
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2020": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 11,
			"sourceType": "module"
		},
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"never"
			]
		}
	}
}
